<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <android.support.v4.view.ViewPager
            android:background="@color/colorAccent"
            android:id="@+id/pager"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@+id/tablayout"/>

        <android.support.design.widget.TabLayout
            android:background="@color/colorPrimary"
            android:id="@+id/tablayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            app:tabGravity="fill"
            app:tabMode="fixed"/>

        <android.support.design.widget.FloatingActionButton
            android:id="@+id/fabgrup"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/tablayout"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginBottom="@dimen/marginfloat"
            android:layout_marginRight="@dimen/marginfloat"
            android:src="@drawable/ic_group_work"
            app:backgroundTint="@color/blueAccent"
            app:fabSize="auto" />
        <android.support.design.widget.FloatingActionButton
            android:visibility="gone"
            android:id="@+id/fabcontact"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/tablayout"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginBottom="@dimen/marginfloat"
            android:layout_marginRight="@dimen/marginfloat"
            android:src="@drawable/ic_chat_black"
            app:backgroundTint="@color/blueAccent"
            app:fabSize="auto" />
    </RelativeLayout>

</RelativeLayout>
